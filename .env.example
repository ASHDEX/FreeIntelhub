PORT=3000

# SMTP — required for email verification, alerts, and newsletter
# Leave empty to auto-verify subscribers and disable email sending
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_password
FROM_EMAIL=alerts@freeintelhub.com

# Public base URL for email links
BASE_URL=http://localhost:3000

# Article retention (days) — how long articles are kept before auto-purge (default: 365)
ARTICLE_RETENTION_DAYS=365

# Newsletter cron schedule (default: 7:00 AM UTC daily)
NEWSLETTER_CRON=0 7 * * *
